#include<iostream>
using namespace std;

class student {
    int rollno;
    string name;
    string cls;
public:
    void getdata() {
        cout << "Enter roll number: ";
        cin >> rollno;
        cout << "Enter name: ";
        cin >> name;
        cout << "Enter class: ";
        cin >> cls;
    }

    void showdata() {
        cout << "\nStudent Details\n";
        cout << "Roll Number: " << rollno << endl;
        cout << "Name: " << name << endl;
        cout << "Class: " << cls << endl;
    }
};

int main() {
    student s;
    s.getdata();
    s.showdata();
    return 0;
}
